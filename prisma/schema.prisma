generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["lynx"]
}

model HomeworkExists {
  id             Int    @id @default(autoincrement())
  superID        String
  title          String
  forumChannelID String
  forumID        String
  guilID         String

  @@schema("lynx")
}

model HomeWorkChannels {
  guildId  String @id
  channels Json   @db.Json

  @@schema("lynx")
}

model Timeline {
  id           Int      @id @default(autoincrement())
  timeLineID   String   @db.Text
  title        String   @db.Text
  type         String   @db.Text
  timeLineDate DateTime
  guildID      String?  @db.Text
  text         String?  @db.Text // nullable

  @@schema("lynx")
}

model Birthdays {
  id        Int       @id @default(autoincrement())
  userID    String    @db.Text
  date      String    @db.Text
  guildID   String    @db.Text
  channelID String    @db.Text
  lastSent  DateTime? // nullable,

  @@schema("lynx")
}

model Log {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  level     String
  message   String   @db.Text
  context   String?

  @@schema("lynx")
}

model NwordCount {
  id      Int    @id @default(autoincrement())
  guildID String
  userID  String
  count   Int    @default(0)
  year    Int
  month   Int

  @@unique([userID, guildID, year, month])
  @@schema("lynx")
}

model ServerConfig {
  id      Int    @id @default(autoincrement())
  guildID String @unique
  config  Json   @db.Json

  @@schema("lynx")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String @db.Text

  @@schema("lynx")
}

model ChatMessages {
  id        Int      @id @default(autoincrement())
  guildId   String
  channelId String
  userId    String
  message   String @db.Text
  timestamp DateTime @default(now())

  @@schema("lynx")
}
